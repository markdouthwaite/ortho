FROM node:12.18.3-alpine

WORKDIR /usr/src/app

COPY package*.json ./

RUN npm install

COPY . .

EXPOSE 3000

ARG DB_NAME
ARG MONGODB_URI
ARG SERVICE_PORT
ARG SERVICE_SECRET

ENV DB_NAME=$DB_NAME
ENV MONGODB_URI=$MONGODB_URI
ENV SERVICE_PORT=$SERVICE_PORT
ENV SERVICE_SECRET=$SERVICE_SECRET

CMD ["node", "app.js"]
